<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.bwie.loginmvpapp.LoginActivity">

    <EditText
        android:id="@+id/edit_user_name"
        android:layout_width="match_parent"
        android:hint="@string/login_label_user_name"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_below="@id/edit_user_name"
        android:id="@+id/edit_user_pwd"
        android:layout_width="match_parent"
        android:hint="@string/login_label_user_pwd"
        android:layout_height="wrap_content" />


    <Button
        android:layout_marginTop="24dp"
        android:layout_below="@id/edit_user_pwd"
        android:id="@+id/btn_login"
        android:text="登录"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
